<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PdfManager.Modules.PdfAnalyzer.Resources">
    <Style TargetType="TextBlock" x:Key="StatisticsLabel">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style TargetType="Border" x:Key="OddRow">
        <Setter Property="Background" Value="LightCyan" />
    </Style>

    <Style TargetType="Border" x:Key="EvenRow">
        <Setter Property="Background" Value="LightBlue" />
    </Style>

    <Style TargetType="FrameworkElement" x:Key="PdfElement">
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="30" />
    </Style>

</ResourceDictionary>